<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="192.0" prefWidth="194.0" stylesheets="@../../../resources/css/custom.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller.Templates.ItemVideoListadoController">
   <children>
      <ImageView fx:id="btnPlay" fitHeight="109.0" fitWidth="130.0" layoutX="43.0" layoutY="37.0" onMousePressed="#playVideo" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../resources/images/icon-video.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <Label fx:id="nameVideo" layoutX="22.0" layoutY="149.0" prefHeight="34.0" prefWidth="153.0" text="Nombre del Video">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ImageView fx:id="btnEdit" fitHeight="90.0" fitWidth="34.0" layoutX="15.0" layoutY="12.0" onMousePressed="#editVideo" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../resources/images/edit.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <ImageView fx:id="btnDelete" fitHeight="90.0" fitWidth="34.0" layoutX="141.0" layoutY="12.0" onMousePressed="#deleteVideo" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../resources/images/delete.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
   </children>
   <styleClass>
      <String fx:value="item" />
      <String fx:value="item-sombra" />
   </styleClass>
</AnchorPane>
